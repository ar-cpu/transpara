# this is just a template, real .env file should be created from this, the real .env is gitignored


# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars
DEBUG=False

# Security
JWT_SECRET_KEY=change-this-to-a-different-random-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
BCRYPT_LOG_ROUNDS=12

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database
DATABASE_URL=postgresql://transpara:secure_password@localhost:5432/transpara_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# File Upload Security
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/var/transpara/uploads
ALLOWED_EXTENSIONS=pdf,docx,wav,mp3,mp4,avi,webm

# External APIs
GOOGLE_SPEECH_API_KEY=your-google-api-key-here
GOOGLE_SPEECH_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/transpara/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090
HEALTH_CHECK_PATH=/api/v1/health

# Email (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@transpara.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=True
ADMIN_EMAIL=admin@transpara.com

# AWS/Cloud (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=transpara-uploads

# Feature Flags
ENABLE_BATCH_PROCESSING=True
ENABLE_WEBHOOKS=True
ENABLE_CACHING=True
ENABLE_AUDIT_LOGGING=True

# Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=True
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' https://cdnjs.cloudflare.com;

# Data Retention
DATA_RETENTION_DAYS=90
ENABLE_GDPR_COMPLIANCE=True

# Admin Dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=change-this-in-production
